<plugin id="org.hippoecm.repository.workflow.reviewedactions" name="JPOX JCR" provider-name="JPOX">
  <extension point="org.jpox.store_manager">
    <store-manager class-name="org.hippoecm.repository.ocm.StoreManagerImpl" key="jcr"/>
  </extension>
  <extension point="org.jpox.store_valuegenerator">
    <valuegenerator name="auid" class-name="org.jpox.store.poid.AUIDPoidGenerator" unique="true" datastore="jcr"/>
    <valuegenerator name="uuid-hex" class-name="org.jpox.store.poid.UUIDHexPoidGenerator" unique="true" datastore="jcr"/>
    <valuegenerator name="uuid-string" class-name="org.jpox.store.poid.UUIDStringPoidGenerator" unique="true" datastore="jcr"/>
  </extension>
  <extension point="org.jpox.store_query_query">
  </extension>
</plugin>
