<scxml xmlns="http://www.w3.org/2005/07/scxml" xmlns:hippo="http://www.onehippo.org/cms7/repository/scxml" version="1.0" initial="reset-event-result">

  <state id="reset-event-result" initial="handle">
    <onentry>
      <script>
        // clear possible previous result, always start empty
        eventResult = null;
      </script>
    </onentry>

    <state id="handle" initial="handle-initial">

      <state id="handle-initial">
        <transition cond="handle.draft and !handle.unpublished and !handle.published" target="new"/>
        <transition target="not-new"/>
      </state>

      <state id="new" initial="new-initial">

        <state id="new-initial">
          <transition cond="!empty(handle.draft.owner)" target="new.edit"/>
          <transition target="new.not-edit"/>
        </state>
        <state id="new.edit">
        </state>
        <state id="new.not-edit">
        </state>
      </state>

      <parallel id="not-new">

        <state id="editable" initial="editable-initial">
          <state id="editable-initial">
            <transition cond="handle.draft and handle.draft.owner == handle.user" target="not-new.edit"/>
            <transition target="not-new.not-edit"/>
          </state>

          <state id="not-new.edit">
          </state>
          <state id ="not-new.not-edit">
            <onentry>
              <if cond="!handle.request and (handle.workflowState=='unpublished' or (!handle.unpublished and handle.workflowState=='draft') or (!handle.draft and !handle.unpublished))">
                <script>
                  handle.hints["obtainEditableInstance"] = true;
                </script>
              </if>
            </onentry>
          </state>
        </state>

        <state id="other"/>
      </parallel>

    </state>

  </state>

  <final id="deleted" />

</scxml>
